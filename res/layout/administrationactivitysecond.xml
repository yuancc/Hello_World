<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/administration_record_container" 
    android:orientation="vertical" >
    	
    <TextView
        android:id="@+id/enteredAdministratorAccountIndicateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="已进入管理员账号，请选择操作"
        />
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <Button 
        android:id="@+id/enterLoginThirdButton"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="查询历史测量数据"
        android:onClick="openLoginThirdActivityButtonClicked"
        android:background="@drawable/custom_button_bg"
        />	
        
    <Button 
        android:id="@+id/changeLoginUsernamePasswordButton"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="更改用户名密码"
        android:layout_alignParentRight="true"
        android:onClick="changeLoginUernamePasswordButtonClicked"
        android:background="@drawable/custom_button_bg"
        />
        
    </RelativeLayout>
    
     <TextView
        android:id="@+id/loginsecondIndicateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="请设置新用户名、密码"
        />	
    <TextView
        android:id="@+id/loginsecondNewUsernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="新用户名："
        />
    
    <EditText 
        android:id="@+id/loginsecondNewUsernameEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:hint="请输入新用户名："
        />
    
    <TextView
        android:id="@+id/loginsecondNewPasswordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="新密码："
        />
    
    <EditText 
        android:id="@+id/loginsecondNewPasswordEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:visibility="invisible"
        android:hint="请输入新密码："
        />
    
    <CheckBox 
            android:id="@+id/changePasswordShowpasswordcheckBox"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:visibility="invisible" 
        	android:text="显示密码"
            />
    
    <RelativeLayout        
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        >
        	
           <Button
            android:id="@+id/changeUsernamePasswordButton"
            android:layout_width="140dp"
        	android:layout_height="wrap_content" 
        	android:text="确认修改管理员账号"
        	android:layout_alignParentRight="true"
        	android:visibility="invisible"
        	android:onClick="changeUsernamePasswordButtonClicked"
        	android:background="@drawable/custom_button_bg"
               />
           
       </RelativeLayout>
    
    

</LinearLayout>
